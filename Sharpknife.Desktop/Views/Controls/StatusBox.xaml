<UserControl x:Name="Control" x:Class="Sharpknife.Desktop.Views.Controls.StatusBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
	<StatusBar>
		<StatusBarItem HorizontalAlignment="Left">
			<TextBlock Text="{Binding Status.Message, FallbackValue=Message, ElementName=Control}"></TextBlock>
		</StatusBarItem>
		<StatusBarItem HorizontalAlignment="Right">
			<ProgressBar Visibility="{Binding Status.Visibility, ElementName=Control}" IsIndeterminate="True" Width="100" Height="10"></ProgressBar>
		</StatusBarItem>
	</StatusBar>
</UserControl>
