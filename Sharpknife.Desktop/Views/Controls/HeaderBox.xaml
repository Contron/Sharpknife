<UserControl x:Name="Control" x:Class="Sharpknife.Desktop.Views.Controls.HeaderBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
	<Border BorderBrush="{x:Static SystemColors.ActiveBorderBrush}" BorderThickness="0,1,0,0" Background="{x:Static SystemColors.ControlBrush}">
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Header, FallbackValue=Header, ElementName=Control}" FontSize="18"></TextBlock>
			<TextBlock Text="{Binding Description, FallbackValue=Description, ElementName=Control}"></TextBlock>
		</StackPanel>
	</Border>
</UserControl>
