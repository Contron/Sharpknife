<UserControl x:Name="Control" x:Class="Sharpknife.Desktop.Views.Controls.HeaderBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" BorderThickness="0, 0, 0, 1">
	<ItemsControl ItemsSource="{Binding TextBlocks, ElementName=Control}" Margin="10">
		<ItemsControl.Resources>
			<Style TargetType="TextBlock">
				<Setter Property="FontSize" Value="18" />
			</Style>
		</ItemsControl.Resources>
		<ItemsControl.ItemsPanel>
			<ItemsPanelTemplate>
				<StackPanel Orientation="Vertical" />
			</ItemsPanelTemplate>
		</ItemsControl.ItemsPanel>
	</ItemsControl>
</UserControl>
