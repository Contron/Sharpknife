<UserControl x:Name="Control" x:Class="Sharpknife.Desktop.Views.Controls.ButtonsBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
	<Border BorderBrush="{x:Static SystemColors.ActiveBorderBrush}" Background="{x:Static SystemColors.ControlBrush}" BorderThickness="0,1,0,0">
		<StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
			<Button Command="{Binding OkCommand, ElementName=Control}" Visibility="{Binding OkVisibility, ElementName=Control}" IsEnabled="{Binding OkEnabled, ElementName=Control}" Content="OK" IsDefault="True" Width="75"></Button>
			<Button Command="{Binding CancelCommand, ElementName=Control}" Visibility="{Binding CancelVisibility, ElementName=Control}" IsEnabled="{Binding CancelEnabled, ElementName=Control}" Content="Cancel" IsCancel="True" Width="75" Margin="10,0,0,0"></Button>
		</StackPanel>
	</Border>
</UserControl>
