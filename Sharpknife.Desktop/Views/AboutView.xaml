<Window x:Class="Sharpknife.Desktop.Views.AboutView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sdv="clr-namespace:Sharpknife.Desktop.ViewModels" xmlns:sdvc="clr-namespace:Sharpknife.Desktop.Views.Controls" Title="About" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<Window.DataContext>
		<sdv:AboutViewModel />
	</Window.DataContext>
	<DockPanel>
		<sdvc:ButtonsBox DockPanel.Dock="Bottom">
			<Button Command="{Binding OkCommand}" Content="OK" IsDefault="True" IsCancel="True" />
		</sdvc:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Name}" TextWrapping="Wrap" FontSize="18" />
			<TextBlock Text="{Binding Version}" TextWrapping="Wrap" Margin="0, 10, 0, 0" />
			<TextBlock Text="{Binding Copyright}" TextWrapping="Wrap" />
		</StackPanel>
	</DockPanel>
</Window>
