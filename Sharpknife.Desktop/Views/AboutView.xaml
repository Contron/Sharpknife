<Window x:Class="Sharpknife.Desktop.Views.AboutView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sdv="clr-namespace:Sharpknife.Desktop.ViewModels" xmlns:sdvc="clr-namespace:Sharpknife.Desktop.Views.Controls" Title="About" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterOwner" Width="350">
	<Window.DataContext>
		<sdv:AboutViewModel />
	</Window.DataContext>
	<DockPanel>
		<sdvc:HeaderBox DockPanel.Dock="Top">
			<TextBlock Text="{Binding Name}" />
		</sdvc:HeaderBox>
		<sdvc:ButtonsBox DockPanel.Dock="Bottom">
			<Button Command="{Binding OkCommand}" Content="_Close" IsDefault="True" IsCancel="True" />
		</sdvc:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontStyle="Italic" />
			<TextBlock Text="{Binding Version}" TextWrapping="Wrap" Margin="0, 10, 0, 0" />
			<TextBlock Text="{Binding Copyright}" TextWrapping="Wrap" />
		</StackPanel>
	</DockPanel>
</Window>
