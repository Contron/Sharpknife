<Window x:Class="Sharpknife.Desktop.Views.ProgressWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sdv="clr-namespace:Sharpknife.Desktop.ViewModels" xmlns:sdvc="clr-namespace:Sharpknife.Desktop.Views.Controls" Closing="WindowClosing" Title="Progress" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterOwner" Width="400">
	<Window.DataContext>
		<sdv:ProgressViewModel />
	</Window.DataContext>
	<Window.TaskbarItemInfo>
		<TaskbarItemInfo ProgressState="Indeterminate" />
	</Window.TaskbarItemInfo>
	<DockPanel>
		<sdvc:HeaderBox DockPanel.Dock="Top">
			<TextBlock Text="{Binding Title}" />
		</sdvc:HeaderBox>
		<sdvc:ButtonsBox DockPanel.Dock="Bottom">
			<Button Command="{Binding CancelCommand}" Content="Cancel" />
		</sdvc:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Status}" TextWrapping="Wrap" />
			<ProgressBar Value="{Binding Progress}" Maximum="{Binding Maximum}" IsIndeterminate="{Binding Indeterminate}" Height="20" Margin="0, 10, 0, 0" />
		</StackPanel>
	</DockPanel>
</Window>
