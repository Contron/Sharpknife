<Window x:Class="Sharpknife.Desktop.Views.MessageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sdv="clr-namespace:Sharpknife.Desktop.ViewModels" xmlns:sdvc="clr-namespace:Sharpknife.Desktop.Views.Controls" Title="Message" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<Window.DataContext>
		<sdv:MessageViewModel></sdv:MessageViewModel>
	</Window.DataContext>
	<DockPanel>
		<sdvc:ButtonsBox DockPanel.Dock="Bottom">
			<Button Content="OK" Command="{Binding OkCommand}"></Button>
		</sdvc:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Title}" FontSize="18" TextWrapping="Wrap"></TextBlock>
			<TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="0, 10, 0, 0"></TextBlock>
		</StackPanel>
	</DockPanel>
</Window>
