<Window x:Class="Sharpknife.Desktop.Views.MessageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sdv="clr-namespace:Sharpknife.Desktop.ViewModels" xmlns:sdvc="clr-namespace:Sharpknife.Desktop.Views.Controls" Loaded="WindowLoaded" Title="Message" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterOwner" Width="400">
	<Window.DataContext>
		<sdv:MessageViewModel />
	</Window.DataContext>
	<DockPanel>
		<sdvc:HeaderBox DockPanel.Dock="Top">
			<TextBlock Text="{Binding Title}" />
		</sdvc:HeaderBox>
		<sdvc:ButtonsBox DockPanel.Dock="Bottom">
			<Button Command="{Binding OkCommand}" Content="OK" IsDefault="True" IsCancel="True" />
		</sdvc:ButtonsBox>
		<TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="10" />
	</DockPanel>
</Window>
