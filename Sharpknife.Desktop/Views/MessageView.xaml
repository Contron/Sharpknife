<Window x:Class="Sharpknife.Desktop.Views.MessageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewModels="clr-namespace:Sharpknife.Desktop.ViewModels" xmlns:controls="clr-namespace:Sharpknife.Desktop.Views.Controls" Loaded="WindowLoaded" Title="Message" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<Window.DataContext>
		<viewModels:MessageViewModel />
	</Window.DataContext>
	<DockPanel>
		<controls:HeaderBox DockPanel.Dock="Top">
			<TextBlock Text="{Binding Title}" />
		</controls:HeaderBox>
		<controls:ButtonsBox DockPanel.Dock="Bottom">
			<Button Command="{Binding CloseCommand}" Content="_OK" IsDefault="True" IsCancel="True" />
		</controls:ButtonsBox>
		<TextBlock Text="{Binding Message}" TextWrapping="Wrap" MinHeight="50" Margin="10" />
	</DockPanel>
</Window>
