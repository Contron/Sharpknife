<Window x:Class="Sharpknife.Gui.ProgressWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sc="clr-namespace:Sharpknife.Gui.Controls" Title="Progress" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500" Closing="ClosingHandler">
	<DockPanel>
		<sc:ButtonsBox x:Name="buttonsBox" x:FieldModifier="private" DockPanel.Dock="Bottom" OKHidden="True" CancelClicked="CancelHandler"></sc:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock x:Name="statusLabel" x:FieldModifier="private" Text="Status" TextWrapping="Wrap" TextTrimming="WordEllipsis"></TextBlock>
			<ProgressBar x:Name="progressBar" x:FieldModifier="private" Height="20" Margin="0,10,0,0"></ProgressBar>
		</StackPanel>
	</DockPanel>
</Window>
