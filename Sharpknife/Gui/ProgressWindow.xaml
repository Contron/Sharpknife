<Window x:Class="Sharpknife.Gui.ProgressWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Progress" MinWidth="300" MaxWidth="500" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Closing="ClosingHandler">
	<StackPanel Margin="10">
		<TextBlock x:Name="statusLabel" x:FieldModifier="private" Text="Status" TextWrapping="Wrap" TextTrimming="WordEllipsis"></TextBlock>
		<ProgressBar x:Name="progressBar" x:FieldModifier="private" Height="20" Margin="0,10,0,0"></ProgressBar>
		<Button x:Name="cancelButton" x:FieldModifier="private" Content="Cancel" Width="75" Margin="0,10,0,0" HorizontalAlignment="Right"></Button>
	</StackPanel>
</Window>
