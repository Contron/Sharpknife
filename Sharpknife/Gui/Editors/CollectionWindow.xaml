<Window x:Class="Sharpknife.Gui.Editors.CollectionWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sc="clr-namespace:Sharpknife.Gui.Controls" Title="Collection" ResizeMode="CanResizeWithGrip" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="200" MinHeight="250" Width="300" Height="300">
	<DockPanel>
		<sc:ButtonsBox DockPanel.Dock="Bottom" CancelHidden="True" OKClicked="OKHandler"></sc:ButtonsBox>
		<DockPanel Margin="10">
			<StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
				<Button ToolTip="Add" Click="AddItemHandler">
					<Image Source="../../Resources/Images/Add.png" Stretch="None" Width="20" Height="20"></Image>
				</Button>
				<Button ToolTip="Edit" Margin="0,10,0,0" Click="EditItemHandler">
					<Image Source="../../Resources/Images/Edit.png" Stretch="None" Width="20" Height="20"></Image>
				</Button>
				<Button ToolTip="Remove" Margin="0,10,0,0" Click="RemoveItemHandler">
					<Image Source="../../Resources/Images/Remove.png" Stretch="None" Width="20" Height="20"></Image>
				</Button>
				<Separator Margin="0,10,0,0"></Separator>
				<Button ToolTip="Clear" Margin="0,10,0,0" Click="ClearItemsHandler">
					<Image Source="../../Resources/Images/Clear.png" Stretch="None" Width="20" Height="20"></Image>
				</Button>
			</StackPanel>
			<ListView x:Name="itemsListView" x:FieldModifier="private"></ListView>
		</DockPanel>
	</DockPanel>
</Window>
