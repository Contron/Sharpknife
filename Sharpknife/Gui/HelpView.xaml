<Window x:Class="Sharpknife.Gui.HelpView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:s="clr-namespace:System;assembly=mscorlib" xmlns:c="clr-namespace:Sharpknife.Gui.Controls" Title="Help" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterOwner" MinWidth="300" MinHeight="200" Width="500" Height="300">
	<Window.Resources>
		<s:String x:Key="welcomeMessage">Welcome to the interactive help explorer. To get started, select an article.</s:String>
	</Window.Resources>
	<DockPanel>
		<c:ButtonsBox DockPanel.Dock="Bottom" OKCommand="{Binding CloseCommand}" CancelVisibility="Collapsed"></c:ButtonsBox>
		<DockPanel Margin="10">
			<TreeView x:Name="treeView" DockPanel.Dock="Left" ItemsSource="{Binding HelpArticles}" Width="150">
				<TreeView.ItemTemplate>
					<HierarchicalDataTemplate ItemsSource="{Binding Children}">
						<TextBlock Text="{Binding Title}"></TextBlock>
					</HierarchicalDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>
			<TextBox Text="{Binding Path=SelectedItem.Text, ElementName=treeView, FallbackValue={StaticResource welcomeMessage}}" TextWrapping="Wrap" IsReadOnly="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" Margin="10,0,0,0"></TextBox>
		</DockPanel>
	</DockPanel>
</Window>
