<Window x:Class="Sharpknife.Gui.HelpWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Help" MinWidth="300" MinHeight="200" Width="500" Height="300" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterOwner">
	<DockPanel Margin="10">
		<StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
			<Button Content="OK" Width="75" HorizontalAlignment="Right" Click="OKHandler"></Button>
		</StackPanel>
		<TreeView x:Name="articlesTreeView" x:FieldModifier="private" DockPanel.Dock="Left" MinWidth="150" SelectedItemChanged="SwapHelpHandler"></TreeView>
		<TextBox x:Name="articleTextBox" x:FieldModifier="private" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Margin="10,0,0,0">
			Welcome to the interactive help explorer. To get started, select an article on the left.
		</TextBox>
	</DockPanel>
</Window>
