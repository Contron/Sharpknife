<Window x:Class="Sharpknife.Gui.HelpWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sc="clr-namespace:Sharpknife.Gui.Controls" Title="Help" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterOwner" MinWidth="300" MinHeight="200" Width="500" Height="300">
	<DockPanel>
		<sc:ButtonsBox DockPanel.Dock="Bottom" CancelHidden="True" OKClicked="OKHandler"></sc:ButtonsBox>
		<DockPanel Margin="10">
			<TreeView x:Name="articlesTreeView" x:FieldModifier="private" DockPanel.Dock="Left" MinWidth="150" SelectedItemChanged="SwapHelpHandler"></TreeView>
			<TextBox x:Name="articleTextBox" x:FieldModifier="private" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Margin="10,0,0,0">
				Welcome to the interactive help explorer. To get started, select an article on the left.
			</TextBox>
		</DockPanel>
	</DockPanel>
</Window>
