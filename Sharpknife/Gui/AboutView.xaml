<Window x:Class="Sharpknife.Gui.AboutView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="clr-namespace:Sharpknife.Gui.ViewModels" xmlns:c="clr-namespace:Sharpknife.Gui.Controls" Title="About" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<Window.DataContext>
		<vm:AboutViewModel></vm:AboutViewModel>
	</Window.DataContext>
	<DockPanel>
		<c:ButtonsBox DockPanel.Dock="Bottom" OKCommand="{Binding CloseCommand}" CancelVisibility="Collapsed"></c:ButtonsBox>
		<DockPanel Margin="10">
			<Border DockPanel.Dock="Left" BorderBrush="DarkGray" BorderThickness="1">
				<Image Source="../Resources/Images/Icon.png" Stretch="None" Width="100" />
			</Border>
			<StackPanel Margin="10,0,0,0">
				<TextBlock Text="{Binding Name}" TextWrapping="Wrap" FontSize="18" Margin="0,0,0,30"></TextBlock>
				<TextBlock Text="{Binding Version}" TextWrapping="Wrap"></TextBlock>
				<TextBlock Text="{Binding Copyright}" TextWrapping="Wrap"></TextBlock>
			</StackPanel>
		</DockPanel>
	</DockPanel>
</Window>
