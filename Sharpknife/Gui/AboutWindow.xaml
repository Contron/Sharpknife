<Window x:Class="Sharpknife.Gui.AboutWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sc="clr-namespace:Sharpknife.Gui.Controls" Title="About" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<DockPanel>
		<sc:ButtonsBox DockPanel.Dock="Bottom" CancelHidden="True" OKClicked="OKHandler"></sc:ButtonsBox>
		<DockPanel Margin="10">
			<Border DockPanel.Dock="Left" BorderBrush="DarkGray" BorderThickness="1" Width="100" Margin="0,0,10,0">
				<Image x:Name="iconImage" x:FieldModifier="private" Source="../Resources/Images/Icon.png" Stretch="None" />
			</Border>
			<StackPanel>
				<TextBlock x:Name="titleLabel" x:FieldModifier="private" Text="Title" TextWrapping="Wrap" TextTrimming="WordEllipsis" FontSize="18" Margin="0,0,0,30"></TextBlock>
				<TextBlock x:Name="versionLabel" x:FieldModifier="private" Text="Version" TextWrapping="Wrap" TextTrimming="WordEllipsis"></TextBlock>
				<TextBlock x:Name="copyrightLabel" x:FieldModifier="private" Text="Copyright" TextWrapping="Wrap" TextTrimming="WordEllipsis"></TextBlock>
			</StackPanel>
		</DockPanel>
	</DockPanel>
</Window>
