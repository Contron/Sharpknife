<UserControl x:Class="Sharpknife.Gui.Controls.HeaderBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
	<Border BorderBrush="DarkGray" BorderThickness="0,0,0,1" Background="WhiteSmoke">
		<StackPanel Margin="10">
			<TextBlock x:Name="headerTextBlock" x:FieldModifier="private" Text="Header" FontSize="18"></TextBlock>
			<TextBlock x:Name="descriptionTextBlock" x:FieldModifier="private" Text="Description"></TextBlock>
		</StackPanel>
	</Border>
</UserControl>
