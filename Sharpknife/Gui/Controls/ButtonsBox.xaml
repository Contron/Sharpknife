<UserControl x:Name="control" x:Class="Sharpknife.Gui.Controls.ButtonsBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
	<Border BorderBrush="DarkGray" BorderThickness="0,1,0,0" Background="WhiteSmoke">
		<StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
			<Button Content="OK" Command="{Binding OKCommand, ElementName=control}" Visibility="{Binding OKVisibility, ElementName=control}" IsDefault="True" Width="75" />
			<Button Content="Cancel" Command="{Binding CancelCommand, ElementName=control}" Visibility="{Binding CancelVisibility, ElementName=control}" IsCancel="True" Width="75" Margin="10,0,0,0" />
		</StackPanel>
	</Border>
</UserControl>
