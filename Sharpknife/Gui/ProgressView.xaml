<Window x:Class="Sharpknife.Gui.ProgressView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Progress" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" Closing="ClosingHandler">
	<Window.TaskbarItemInfo>
		<TaskbarItemInfo ProgressState="Indeterminate"></TaskbarItemInfo>
	</Window.TaskbarItemInfo>
	<StackPanel Margin="10">
		<TextBlock Text="{Binding Message}"></TextBlock>
		<ProgressBar IsIndeterminate="True" Height="20" Margin="0,10,0,0"></ProgressBar>
	</StackPanel>
</Window>
