<Window x:Class="Sharpknife.Gui.MessageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c="clr-namespace:Sharpknife.Gui.Controls" Title="Message" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<DockPanel>
		<c:ButtonsBox DockPanel.Dock="Bottom" OKCommand="{Binding CloseCommand}" CancelVisibility="Collapsed"></c:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Title}" FontSize="18" TextWrapping="Wrap"></TextBlock>
			<TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="0,10,0,0"></TextBlock>
		</StackPanel>
	</DockPanel>
</Window>
