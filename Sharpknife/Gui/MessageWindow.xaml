<Window x:Class="Sharpknife.Gui.MessageWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Message" MinWidth="300" MaxWidth="500" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
	<StackPanel Margin="10">
		<TextBlock x:Name="messageLabel" x:FieldModifier="private" Text="Status" TextWrapping="Wrap" TextTrimming="WordEllipsis" MinHeight="50"></TextBlock>
		<Button Content="OK" Width="75" Margin="0,10,0,0" HorizontalAlignment="Right" Click="OKHandler"></Button>
	</StackPanel>
</Window>
