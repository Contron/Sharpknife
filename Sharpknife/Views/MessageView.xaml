<Window x:Class="Sharpknife.Views.MessageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:svc="clr-namespace:Sharpknife.Views.Controls" Title="Message" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<DockPanel>
		<svc:ButtonsBox DockPanel.Dock="Bottom" OKCommand="{Binding CloseCommand}" CancelVisibility="Collapsed"></svc:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Title, FallbackValue=Title}" FontSize="18" TextWrapping="Wrap"></TextBlock>
			<TextBlock Text="{Binding Message, FallbackValue=Message}" TextWrapping="Wrap"></TextBlock>
		</StackPanel>
	</DockPanel>
</Window>
