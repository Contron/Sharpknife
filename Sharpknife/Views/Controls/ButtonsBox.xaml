<UserControl x:Name="Control" x:Class="Sharpknife.Views.Controls.ButtonsBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" BorderBrush="DarkGray" BorderThickness="0,1,0,0" Background="WhiteSmoke">
	<StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
		<Button Content="OK" Command="{Binding OkCommand, ElementName=Control}" Visibility="{Binding OkVisibility, ElementName=Control}" IsDefault="True" Width="75"></Button>
		<Button Content="Cancel" Command="{Binding CancelCommand, ElementName=Control}" Visibility="{Binding CancelVisibility, ElementName=Control}" IsCancel="True" Width="75" Margin="10,0,0,0"></Button>
	</StackPanel>
</UserControl>
