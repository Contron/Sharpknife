<Window x:Class="Sharpknife.Views.AboutView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:svc="clr-namespace:Sharpknife.Views.Controls" Title="About" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinWidth="300" MaxWidth="500">
	<DockPanel>
		<svc:ButtonsBox DockPanel.Dock="Bottom" OkCommand="{Binding OkCommand}" CancelVisibility="Collapsed"></svc:ButtonsBox>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding Name, FallbackValue=Name}" TextWrapping="Wrap" FontSize="18"></TextBlock>
			<TextBlock Text="{Binding Version, FallbackValue=Version}" TextWrapping="Wrap" Margin="0,10,0,0"></TextBlock>
			<TextBlock Text="{Binding Copyright, FallbackValue=Copyright}" TextWrapping="Wrap"></TextBlock>
		</StackPanel>
	</DockPanel>
</Window>
